<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".activity.Chitietsanpham">
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:src="@drawable/close_24" />

    <ImageView
        android:id="@+id/img_pro"
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:src="@drawable/ic_taikhoan"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="160dp"
        android:text="Tên sản phẩm"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="160dp"
        android:text="Giá sản phẩm"
        android:textSize="15dp"
        android:textColor="#E30606"/>

    <ImageView
        android:id="@+id/imgtru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/horizontal_rule_24"
        android:layout_below="@+id/tv_price"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_pro"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_soluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_price"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/imgtru"
        android:layout_marginLeft="10dp"
        android:text="1"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/imgcong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_24"
        android:layout_below="@+id/tv_price"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_soluong"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/tv_chon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn phương thức thanh toán"
        android:layout_below="@id/img_pro"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/rdogroup_thanhtoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tv_chon"
        android:layout_margin="10dp">
        <RadioButton android:id="@+id/radio_pirates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán khi nhận hàng"/>
        <RadioButton android:id="@+id/radio_ninjas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán chuyển khoản"/>
    </RadioGroup>

    <Button
        android:id="@+id/btn_addcart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mua hàng"
        android:layout_below="@id/rdogroup_thanhtoan"/>

    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"/>

    <TextView
        android:id="@+id/txtToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="40dp"
        android:textColor="#4CAF50"
        android:text="ok"
        />

    <Button
        android:id="@+id/btnthanhtoanpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mua hàng zalopay ( ấn nút này trươc )"
        android:layout_marginTop="450dp"/>
    <Button
        android:id="@+id/btntesst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mua hàng zalopay ( xong đến nút này )"
        android:layout_marginTop="500dp"/>

</RelativeLayout>