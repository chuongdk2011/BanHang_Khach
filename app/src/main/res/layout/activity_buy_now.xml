<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".activity.Chitietsanpham"
    android:orientation="vertical">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDD6F1">
        <ImageView
            android:id="@+id/id_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/back_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn hàng"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </Toolbar>

    <TextView
        android:id="@+id/tv_thongbao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#BC0B0B"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map_24"/>
        <TextView
            android:id="@+id/textdiachi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin nhận hàng"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/tv_sua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Sửa"/>
        <TextView
            android:id="@+id/tv_hoten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ tên: Nguyễn Văn A"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/textdiachi"/>
        <TextView
            android:id="@+id/tv_sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDT: 0123456789"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/tv_hoten"/>
        <TextView
            android:id="@+id/tv_diachi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: phú xuyên, hà nội"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/tv_sdt"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <ImageView
            android:id="@+id/img_pro"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_taikhoan"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="160dp"
            android:text="Tên sản phẩm"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="160dp"
            android:text="Giá sản phẩm"
            android:textSize="15dp"
            android:textColor="#E30606"
            android:layout_below="@+id/tv_name"/>

        <ImageView
            android:id="@+id/imgtru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/horizontal_rule_24"
            android:layout_below="@+id/tv_price"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="160dp"/>

        <TextView
            android:id="@+id/tv_soluong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/imgtru"
            android:layout_marginLeft="10dp"
            android:text="1"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/imgcong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_24"
            android:layout_below="@+id/tv_price"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_soluong"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tv_thanhtien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành tiền: 0 VND"
            android:textColor="#B12626"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_addcart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button_bg4"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Thanh toán khi nhận hàng"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_margin="7dp"
        android:layout_below="@id/img_pro"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btntesst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button_bg4"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Thanh toán bằng zalopay"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_margin="7dp"
        android:layout_below="@+id/btn_addcart"/>
</LinearLayout>